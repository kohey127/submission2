<h1>Editing Book</h1>

<% if @book.errors.any? %>
	<div id="error_explanation">
		<h2 class="error_count"><%= pluralize(@book.errors.count, "error") %> errors prohibited this book from being saved:</h2>
		<ul class="error_box">
			<% @book.errors.full_messages.each do |message| %>
				<li class="error_message"><%= message %></li>
			<% end %>
		</ul>
		<style></style>
	</div>
<% end %>

<%= form_for(@book) do |f| %>
	<div class="field">
		<%= f.label :title %>
		<%= f.text_area :title %>
	</div>
	<div class="field">
		<%= f.label :body %>
		<%= f.text_area :body %>
	</div>
	<div class="actions">
		<%= f.submit 'Update Book' %>
	</div>
	<p><%= link_to "Show", book_path(@book) %>|<%= link_to "Back", books_path %></p>
<% end %>